/* pages/changephone/changephone.wxss */

page {
  background-color: #f1f2f4;
}


.section {
  width: 750rpx;
  height: 180rpx;
  background-color: white;
  margin-top: 20rpx;
}

.view {
  width: 700rpx;
  height: 90rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-bottom: 0.4rpx solid #f1f2f4;
  display: flex;
  align-items: center;
}

.text {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  font-size: 26rpx;
  color: #333;
  width: 380rpx;
}

.get_code_view {
  background-color: lightgray;
  width: 200rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.get_code_text {
  color: white;
  font-size: 24rpx;
}


.ok_view {
  margin-top: 80rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 74rpx;
  width: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #50b5eb;
}

.ok_text {
  font-size: 28rpx;
  color: white;
}