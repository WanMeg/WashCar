/* pages/payOrder/payOrder.wxss */

page {
  background-color: #f1f2f4;
}

.info_view {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.image {
  width: 110rpx;
  height: 110rpx;
  margin-top: 20rpx;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 6rpx;
  margin-bottom: 30rpx;
}

.price_view {
  width: 100%;
  height: 120rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.price_left_text {
  width: 80rpx;
  font-size: 28rpx;
  color: #666;
  margin-left: 25rpx;
}

.price {
  width: 540rpx;
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}

.pay_view {
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 70rpx;
  width: 700rpx;
  height: 74rpx;
  background-color: #50b5eb;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay_text {
  font-size: 28rpx;
  color: white;
}





.gary_view {
  width: 100%;
  height: 100%;
  background-color: black;
  position: fixed;
  top: 0;
  opacity: 0.5;
}

.confirm_pay_view {
  width: 100%;
  height: auto;
  position: fixed;
  bottom: 0;
  opacity: 1;
  background-color: white;
}

.con_top_view {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 0.4rpx solid #f1f2f4;
}

.con_title {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 25rpx;
}

.pay_style_view {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 0.4rpx solid #f1f2f4;
}

.pay_icon {
  height: 50rpx;
  width: 50rpx;
  margin-left: 25rpx;
}

.pay_style_text {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 555rpx;
  font-size: 30rpx;
  color: #333;
}

.pay_select_img {
  height: 35rpx;
  width: 35rpx;
  margin-right: 25rpx;
}


.total_view {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
}

.total_text {
  font-size: 28rpx;
  color: #333;
  margin-left: 25rpx;
  width: 100rpx;
}


.total_price {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  width: 380rpx;
}


.quickly_view {
  width: 200rpx;
  height: 70rpx;
  margin-right: 25rpx;
  margin-left: 20rpx;
  background-color: #ff4200;
  display: flex;
  justify-content: center;
  align-items: center;
}


.quickly_text {
  font-size: 26rpx;
  color: white;
}