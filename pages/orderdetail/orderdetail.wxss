/* pages/orderDetail/orderDetail.wxss */

page {
  background-color: #f1f2f4;
}

.status_view {
  margin-top: 20rpx;
  background-color: white;
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.status_img {
  width: 50rpx;
  height: 50rpx;
}

.status_text {
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
}


.info_view {
  width: 750rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  border-bottom: 0.4rpx solid #f1f2f4;
  background-color: white;
  margin-top: 20rpx;
}

.image {
  margin-left: 25rpx;
  margin-right: 25rpx;
  width: 115rpx;
  height: 115rpx;
}

.name {
  width: 560rpx;
  font-size: 28rpx;
  color: black;
}


.pay_view {
  margin-top: 20rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
}


.pay_left_text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 25rpx;
}

.price_text {
  font-size: 28rpx;
  color: red;
  margin-right: 25rpx;
}


.other_view {
  margin-top: 20rpx;
  width: 100%;
  height: 135rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.order_num_text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 25rpx;
  margin-top: 25rpx;
}

.date_text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 25rpx;
  margin-top: 10rpx;
}