/* pages/wallet/wallet.wxss */

page {
  background-color: #f1f2f4;
}

.header_view {
  background-color: #50b5eb;
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header_upview {
  background-color: #50b5eb;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.yue_text {
  font-size: 60rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 40rpx;
}

.header_subview {
  background-color: #50b5eb;
  width: 100%;
  height: 300rpx;
  position: relative;
}

.cloud_img {
  width: 100%;
  height: 100%;
  bottom: 0;
}

.cz_view {
  margin-top: 200rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 74rpx;
  width: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #50b5eb;
  position: absolute;
  bottom: 40rpx;
}

.cz_text {
  font-size: 28rpx;
  color: white;
}




.jilu_view {
  margin-top: 20rpx;
  height: 80rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.jilu_text {
  font-size: 28rpx;
  color: #333;
  margin-left: 25rpx;
}




.list_view {
  margin-top: 20rpx;
  background-color: white;
  height: auto;
}


.list_item_view {
  width: 700rpx;
  height: 120rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  display: flex;
  border-bottom: 0.4rpx solid #f1f2f4;
}

.left_view {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.status_text {
  font-size: 26rpx;
  color: #333;
}

.date_text {
  font-size: 26rpx;
  color: #333;
}


.right_view {
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.price_text {
  width: 100%;
  font-size: 30rpx;
  color: #50b5eb;
  text-align: right;
}